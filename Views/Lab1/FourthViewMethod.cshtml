@model List<string>
<h2>Отсортированный список овощей (по длине)</h2>

<table class="table" style=" width:20%">
    <thead>
        <tr>
            <th class="text-center">Наименование</th>
            <th class="text-center">Длина</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var vegetable in Model)
        {
            <tr class="text-center">
                <td>@vegetable</td>
                <td>@vegetable.Count()</td>
            </tr>
        }
    </tbody>
</table>