@model WebLab1.Models.ViewModels.StudentVM


@{
    ViewBag.Title = "DeleteStudent";
}

<h2>Удалить студента</h2>

<h3>Вы уверены, что хотите удалить эту запись?</h3>
<div>
    <h4>Студент</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Фамилия)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Фамилия)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Имя)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Имя)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Отчество)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Отчество)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Пол)
        </dt>

        <dd>
            @if (Model.Пол) {<text>Мужской</text>} else { <text>Женсикй</text>}
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Адрес_проживания)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Адрес_проживания)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Дата_рождения)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Дата_рождения, new { htmlAttributes = new { @type = "date" } })
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Уровень_владения_ИЯ)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Уровень_владения_ИЯ)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Удалить" class="btn btn-default" /> |
            @Html.ActionLink("Назад", "ListOfStudents")
        </div>
    }
</div>
